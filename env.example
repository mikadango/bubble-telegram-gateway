# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here   # Your Telegram bot token from @BotFather
TELEGRAM_GROUP_ID=your_telegram_group_id_here     # The numeric ID of your Telegram group (with topics enabled)

# Bubble API Configuration
BUBBLE_API_URL=https://your-bubble-app.bubbleapps.io   # Your Bubble app's API base URL
BUBBLE_API_KEY=your_bubble_api_key_here               # Your Bubble app's API key

# Server Configuration
PORT=3000                                             # Port to run the server on (default 3000)
NODE_ENV=development                                  # Set to 'production' for live deployment

# Webhook Configuration
WEBHOOK_BASE_URL=https://your-domain.com              # Public URL of your deployed server (must be HTTPS for Telegram webhooks)

# Security (optional, for future use)
WEBHOOK_SECRET=your_webhook_secret_here               # Secret for securing incoming webhooks (not enforced by default) 